platform :ios, '16.0'

target 'FitnessApp' do
  use_frameworks!

  # Firebase
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  pod 'Firebase/Storage'
  pod 'Firebase/Functions'
  pod 'Firebase/Analytics'

  # UI Components
  pod 'SnapKit'
  pod 'Kingfisher'

  # Utilities
  pod 'Alamofire'
  pod 'SwiftyJSON'

  target 'FitnessAppTests' do
    inherit! :search_paths
  end
end 